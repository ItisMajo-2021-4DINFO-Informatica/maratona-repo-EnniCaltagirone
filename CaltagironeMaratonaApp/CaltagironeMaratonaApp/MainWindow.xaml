<Window x:Class="CaltagironeMaratonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaltagironeMaratonaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="612" Width="548">
    <StackPanel>
        <Button x:Name="BtnLeggiFile" Content="Leggi file" Click="BtnLeggiFile_Click"></Button>
        <DataGrid x:Name="DgElencoMaratone" Height="300" />
        <Label Content="Inserisci il nome di un atleta"/>
        <TextBox x:Name="TxtAtleta" TextWrapping="Wrap"/>
        <Label Content="Inserisci la citta di un atleta"/>
        <TextBox x:Name="TxtCitta" TextWrapping="Wrap"/>
        <Button x:Name="BtnTempo" Content="Tempo" Click="BtnTempo_Click"/>
        <Label x:Name="LblTempo" Height="23"/>
        <Label Content="Dammi la citta per scoprire gli atleti che ci gareggiano"/>
        <TextBox x:Name="TxtCittaAtleti" TextWrapping="Wrap"/>
        <Button x:Name="BtnAtletiPerCitta" Content="Atleti" Click="BtnAtletiPerCitta_Click"/>
        <Label x:Name="LblAtleti" Height="23"/>
        <Button x:Name="BtnScriviDaFile" Content="Salva sul file" Click="BtnScriviDaFile_Click"/>
    </StackPanel>
</Window>
